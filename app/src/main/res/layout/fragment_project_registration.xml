<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E0F2F1"
    tools:context="com.example.pooja.qualitycircle.ProjectRegistration"
    >
    <TextView android:text="Project Title:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/editProject_title"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:ems="10"
        android:background="@drawable/edittextstyle"
        android:inputType="text" />
    <TextView android:text="Project Leader Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="15sp"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/editLeader_name"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_marginTop="130dp"
        android:textSize="20sp"
        android:ems="10"
        android:background="@drawable/edittextstyle"
        android:inputType="text" />
    <TextView android:text="Project Leader Contact Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:textSize="15sp"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/editLeader_contact"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_marginTop="210dp"
        android:textSize="20sp"
        android:ems="10"
        android:background="@drawable/edittextstyle"
        android:inputType="text" />
    <TextView android:text="Project Members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:textSize="15sp"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/editProjectMembers"
        android:layout_width="fill_parent"
        android:layout_height="100sp"
        android:layout_marginTop="290dp"
        android:textSize="20sp"
        android:ems="10"
        android:clickable="true"
        android:scrollbars="vertical"
        android:background="@drawable/edittextstyle"
        android:inputType="textMultiLine" />

    <ImageButton
        android:id="@+id/buttonmembersAdd"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/ic_add_circle_black_24dp"
        android:layout_marginTop="400dp"
        android:layout_gravity="center_horizontal"
        android:elevation="0dp"
        />
    <TextView android:text="Product group:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:textSize="15sp"
        android:textColor="#000"
        />

    <Spinner
        android:id="@+id/spinProuct_group"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="@drawable/edittextstyle"
        android:layout_marginTop="480dp" />

    <TextView android:text="Date of Identfication:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:textSize="15sp"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/editdate_id"
        android:layout_width="250dp"
        android:layout_height="40sp"
        android:layout_marginTop="560dp"
        android:textSize="20sp"
        android:ems="10"
        android:editable="false"
        android:background="@drawable/edittextstyle"
        android:inputType="text" />

    <ImageButton
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:src="@drawable/ic_date_range_white_24dp"
        android:layout_marginTop="545dp"
        android:layout_gravity="right"
        android:id="@+id/buttondate_id"
        />
    <TextView android:text="Expected date of completion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
        android:textSize="15sp"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/editdate_comp"
        android:layout_width="250dp"
        android:layout_height="40sp"
        android:layout_marginTop="640dp"
        android:textSize="20sp"
        android:ems="10"
        android:editable="false"
        android:background="@drawable/edittextstyle"
        android:inputType="text" />

    <ImageButton
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:src="@drawable/ic_date_range_white_24dp"
        android:layout_marginTop="625dp"
        android:layout_gravity="right"
        android:id="@+id/buttondate_comp"
        />
    <TextView android:text="Expected Benefits:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="690dp"
        android:textSize="15sp"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/editExp_benefits"
        android:layout_width="fill_parent"
        android:layout_height="100sp"
        android:layout_marginTop="720dp"
        android:textSize="20sp"
        android:ems="10"
        android:editable="false"
        android:inputType="textMultiLine"
        android:background="@drawable/edittextstyle"
        android:scrollbars="vertical"

         />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="830dp"
        android:textSize="20sp"
        android:background="#FFC107"
        android:textColor="#ffff"
        android:elevation="2dp"
        />


</FrameLayout>
</ScrollView>